<main role="main">

    <!--Navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Mongo Scraper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>
                <li class="nav-item">
                    <form action="/scrape" method="GET" class="navbar-form">
                        <button type="submit" class="btn btn-danger scrape-new">Scrape New Articles!</button>
                    </form>
                </li>
                <li class="nav-item">
                    <a class="btn btn-danger clear">Clear Articles!</a>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!--Main container-->
    <div class="jumbotron text-center">
        <div class="overlay">
            <div class="background-image"></div>
            <div class="caption">
                <h1>Mongo Scraper</h1>
                <p>Democracy Now Edition</p>
            </div>
        </div>
    </div>
    <div class="container-fluid article-container">
        <h2><i>Articles</i></h2>
        {{#each articles}}
        <div class="col-md-9">
            <h3 class="panel-title pull-left">{{this.link}}</h3>
        </div>
        <div class="col-md-3">
            <form action="/save" method="POST">
                <input id="article-title" type="hidden" name="title" value={{this.title}}>
                <input id="article-link" type="hidden" name="link" value={{this.link}}>
                <button type="submit" class="btn btn-default pull-right">Save Article</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel-body">
                <p>{{this.link}}</p>
            </div>
        </div>
    </div>
    {{/each}}

</main>

<footer class="footer">
    <div class="container">
        <p class="float-right">
            <a href="#">Back to top</a>
        </p>
        <p>Democracy Now News Scraper</p>
    </div>
</footer>