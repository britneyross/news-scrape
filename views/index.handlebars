<div class="row">
    <div class="jumbotron text-center">
        <div class="overlay">
            <div class="background-image"></div>
            <div class="caption">
                <h1>Mongo Scraper</h1>
                <p>Democracy Now Edition</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s2"></div>
    <div class="col s8 left-align">
        {{#each articles}}
        <div class="card-panel">
            <h4>{{this.title}}</h4>
            <a href="/readArticle/{{this._id}}" class="btn btn-primary" id="btnSignUp">Read Article</a>
        </div>
        {{/each}}
    </div>
</div>