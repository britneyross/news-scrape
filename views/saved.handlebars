<div class="row">
    <h3>Saved Articles</h3>
</div>
    {{#if saved}}
    {{#each saved}}
<div class="row">
    <div class="col s2"></div>
    <form action="/saved/{{_id}}" method="POST" class="card-panel col s8">
        <h5>Comment on this article</h5>
        <div class="row">
            <div class="input-field">
                <input id="comment_input" type="text" placeholder="Comment" name="comment" class="validate active">
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <center><input class="btn add-comment-btn" type="Submit" value="Submit"></center>
            </div>
        </div>
    </form>
</div>
    {{/each}}
    {{else}}
    <h3 class="text-center">No saved articles yet!</h3>
    {{/if}}

<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Notes:</h5>
        {{#if article.note}}
        {{#each article.note}}
        <div class="card">
            <p id="comment">{{name}}</p>
            <p>{{body}}</p>
        </div>
        {{/each}}
        {{else}}
        <p>No notes yet</p>
        {{/if}}
    </div>
</div>