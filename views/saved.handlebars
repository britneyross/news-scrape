<div class="row">
    <h3>Saved Articles:</h3>
</div>


{{#if Saved}}
{{#each Saved}}
<div class="row">
    <div class="col s2"></div>
    <h3>{{title}}</h3>
    <form action="/savedNote/{{_id}}" method="POST" class="card-panel col s8">
        <h5>Comment on this article</h5>
        <div class="row">
            <div class="input-field">
                <input type="text" placeholder="Comment" name="com">
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <center><input class="btn add-comment-btn" type="Submit" value="Submit"></center>
            </div>
        </div>
    </form>
</div>


<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Notes:</h5>
        {{#each this.Note}}
        <div class="card">
            <p>{{@index}}:{{this.body}}</p>
        </div>
        {{/each}}
    </div>
</div>
{{/each}}
{{else}}
<h3 class="text-center">No saved articles yet!</h3>
{{/if}}

